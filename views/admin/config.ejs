//            minuteStep: 1,
//            template: 'modal',
//            appendWidgetTo: 'body',
//            showSeconds: true,
//            showMeridian: false,
//            defaultTime: false
//        });
        $('#startTime').timepicker({
            minuteStep: 1,
            showSeconds: false,
            showMeridian: false,
            defaultTime: '<%= config.startTime %>'
        });
        $('#endTime').timepicker({
            minuteStep: 1,
            showSeconds: false,
            showMeridian: false,
            defaultTime: '<%= config.endTime %>'
        });
    });
</script>
